<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/baground_colour"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/baground_colour"
        >
    <TextView
        android:text="Performance"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#0a1876"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Best use when battery is between 80% to 100%"
        android:layout_gravity="center"
        android:textColor="#0a1876"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ActPerformance"
        android:text="Activate Performance Mode"
        android:textColor="#ffffff"
        android:background="#0a1876"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Eco"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#38840c"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Best use when battery is between 20% to 80%"
        android:layout_gravity="center"
        android:textColor="#38840c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ActEco"
        android:text="Activate Eco Mode"
        android:textColor="#ffffff"
        android:background="#38840c"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Critical"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#831715"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Best use when battery is less than 20%"
        android:layout_gravity="center"
        android:textColor="#831715"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ActCritical"
        android:text="Activate Critical Mode"
        android:textColor="#ffffff"
        android:background="#831715"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Custom"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/ActCustom"
        android:text="Activate Custom Mode"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    </LinearLayout>
    </ScrollView>

</LinearLayout>